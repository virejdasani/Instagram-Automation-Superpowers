{
  "manifest_version": 3,
  "name": "Instagram Automation Superpowers",
  "version": "1.0",
  "description": "Automatically follows users in Instagram followers list and keeps metrics locally.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://www.instagram.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["https://www.instagram.com/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }]
}